<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'User Detail'}) %> 
<body>
  <h1><%= user.Profile.fullName %></h1>
  <a href="/user/<%= user.id %>/profile"><button>Edit Profile</button></a><br><br>
  <label>Ulang Tahun:</label>
  <p><%= user.Profile.formatDate %></p><br>
  <label>Location:</label>
  <p><%= user.Profile.location %></p><br>
  <label>Nomor Telepon:</label>
  <p><%= user.Profile.phoneNumber %></p><br>
  <br>
  <table border="3">
    <tr>
      <th>No</th>
      <th>Meme</th>
      <th>Caption</th>
      <th>Like</th>
      <th>Tags</th>
      <th>Action</th>
    </tr>
    <% posts.forEach((el,i) => { %>
      <tr>
        <td><%= i+1 %></td>
        <td><img src="<%= el.url %>"></td>
        <td><%= el.caption %></td>
        <td><%= el.like %></td>
        <td>
          <% el.Tags.forEach(el => { %>
            <%= el.tagName %> 
          <% }) %>
        </td>
        <td><a href="/user/<%= el.UserId %>/delete/<%= el.id %>"><button>Delete</button></a></td>
      </tr>
    <% }) %>
  </table>
</body>
</html>