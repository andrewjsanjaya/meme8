<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: 'Add Post'}) %>
<body>
  <h1>Add Post</h1>
  <form action="/post/add/<%= idUser %>" method="post">
    <label>Caption</label><br>
    <input type="text" name="caption" id="caption"><br>
    <label>Url</label><br>
    <input type="text" name="url" id="url"><br><br>
    <label>Tag</label><br>
    <% tags.forEach(el => { %>
      <input type="checkbox" id="tags" name="tags" value="<%= el.id %>">
      <label><%= el.tagName %></label><br>
    <% }) %>
    <input type="submit" value="Submit"><br>
  </form>
</body>
</html>